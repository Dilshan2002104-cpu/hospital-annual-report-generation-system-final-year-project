<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="monthly_visits_subreport"
              pageWidth="535"
              pageHeight="100"
              columnWidth="535"
              leftMargin="0"
              rightMargin="0"
              topMargin="0"
              bottomMargin="0">

    <!-- Fields from MonthlyVisitDTO -->
    <field name="month" class="java.lang.String"/>
    <field name="visitCount" class="java.lang.Integer"/>
    <field name="monthNumber" class="java.lang.Integer"/>

    <!-- Column Header -->
    <columnHeader>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="0" width="267" height="25" backcolor="#E6F3FF"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#4A90E2"/>
                </graphicElement>
            </rectangle>
            <rectangle>
                <reportElement x="267" y="0" width="268" height="25" backcolor="#E6F3FF"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#4A90E2"/>
                </graphicElement>
            </rectangle>


            <staticText>
                <reportElement x="10" y="5" width="247" height="15"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Month]]></text>
            </staticText>

            <staticText>
                <reportElement x="277" y="5" width="248" height="15"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Total No of Patients Visited]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail Band -->
    <detail>
        <band height="20">
            <rectangle>
                <reportElement x="0" y="0" width="267" height="20"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#CCCCCC"/>
                </graphicElement>
            </rectangle>
            <rectangle>
                <reportElement x="267" y="0" width="268" height="20"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#CCCCCC"/>
                </graphicElement>
            </rectangle>

            <textField>
                <reportElement x="10" y="2" width="247" height="16"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{month}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="277" y="2" width="248" height="16"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{visitCount}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Summary Band for Total -->
    <summary>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="0" width="267" height="25" backcolor="#F0F8FF"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#4A90E2"/>
                </graphicElement>
            </rectangle>
            <rectangle>
                <reportElement x="267" y="0" width="268" height="25" backcolor="#F0F8FF"/>
                <graphicElement>
                    <pen lineWidth="1.0" lineColor="#4A90E2"/>
                </graphicElement>
            </rectangle>

            <staticText>
                <reportElement x="10" y="5" width="247" height="15"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Total]]></text>
            </staticText>

            <textField>
                <reportElement x="277" y="5" width="248" height="15"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{REPORT_COUNT}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>